---
import Layout from '@/layouts/DefaultLayout.astro';
// import { sortedPosts } from '@/utils/sort'
// const posts = sortedPosts(await Astro.glob('../posts/*.{md,mdx}'))
//   return posts.map(post => {
//     return {
//       params: {
//         // these `.slice` calls are necessary and remove
//         // the `/` from the beginning and end of the permalink
//         blog: post.frontmatter.permalink.slice(1).slice(0, -1)
//       },
//       props: post
//     }
//   })
const posts = (await Astro.glob('../posts/*.{md,mdx}')).sort(
	(a, b) => new Date(b.frontmatter.isoDate).valueOf() - new Date(a.frontmatter.isoDate).valueOf()
);

const featuredPost = posts.shift()
---

<Layout>
	<section class="container grey-container">
		<a class="l-1-2" href={"/groupincome.org/"+featuredPost.frontmatter.permalink}>
			<div class="c-header">
				<span class="is-posttitle">BLOG</span>
				<h1 class="is-title-1 c-main-title">{featuredPost?.frontmatter.title || 'No article found'}</h1>
				<p class="c-main-para">{featuredPost?.frontmatter.author} • { featuredPost?.frontmatter.date }</p>
			</div>
			<img class="c-header-image" src={'/groupincome.org/'+featuredPost?.frontmatter.image}/>
		</a>
	</section>

	<section class="l-1-1-1" v-if="posts">
			{posts.map((article) => (
				<article>
					<a href={"/groupincome.org/"+article.frontmatter.permalink}>
							<img class="c-article-image" src={'/groupincome.org/'+article.frontmatter.image || '/groupincome.org/images/' + article.frontmatter.permalink + '.jpeg'}/>
							<h2 class="c-blog-title">{article.frontmatter.title}</h2>
							<p>{article.frontmatter.description || 'TODO'}</p>
							<div class="c-info">{article.frontmatter.author || "Greg Slepak"}<time v-if="article.frontmatter.date">{ article.frontmatter.date }</time></div>
					</a>
				</article>
			))}
	</section>
</Layout>

<style lang="scss" is:global>
@import "../styles/_variables";
@import "../styles/_mixins";
.c-blog-wrapper {
	.icon-link {
		display: none;
	}

	.icon-link::before {
		font-family: "Font Awesome 5 Free";
	}

	ul, ol {
		margin: 1rem 0 1.5rem 1rem;
	}

	h1, h2, h3, h4, h5, h6 {
		font-weight: bold;
	}

	h1, h2{
		margin-top: 4rem;
	}

	h1, h2, h3, h4, h5, h6, p, li {
		margin-bottom: 1rem;
	}

	a {
		color: $primary_0;

		background: linear-gradient(to right, rgba(256, 256, 256, 0), rgba(256, 256, 256, 0)),
								linear-gradient(to right, $primary_0, $primary_0);
		background-size: 100% 0.1em, 0 0.1em;
		background-position: 100% 100%, 0 100%;
		background-repeat: no-repeat;
		transition: background-size 400ms;
		&:hover,
		&:focus {
			background-size: 0 0.1em, 100% 0.1em;
		}
	}

	img {
		margin: 2rem 0;
	}

	table {
		margin: 1rem 0 3rem 0;
	}

	th {
		padding: 1rem;
		border-bottom: 2px solid #ddd;
	}

	td {
		padding: 1rem;
		border-bottom: 1px solid #ddd;
	}

	center {
		margin-bottom: 1rem;
	}

	ul {
		list-style-type: disc;
	}

	.footnotes {
		font-size: .8rem;
	}

	iframe {
		margin: 2rem auto;
		max-width: 100%;
	}

	blockquote {
		border-left: 5px solid rgba(0, 0, 0, .15);
		padding: 10px 18px;
		font-style: italic;
		margin: 0 0 1.5em;

		p:last-child {
